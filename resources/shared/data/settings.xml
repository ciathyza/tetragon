<?xml version="1.0" encoding="UTF-8"?>
<settings>
	
	<!-- ================================================================================
	BASE SETTINGS
	================================================================================= -->
	<!-- The frame rate at which the engine's game loop runs. -->
	<frameRate>60</frameRate>
	<!-- The factor that screens are globally scaled with. -->
	<screenScale>1.0</screenScale>
	<!-- The ID of the first-opening screen. If the splash screen is defined and
	enabled, it will open before the initial screen opens. -->
	<initialScreenID>testScreen</initialScreenID>
	<!-- The ID of the used UI theme. -->
	<themeID>default</themeID>
	<!-- Determines wether the screen manager is enabled at all. Defaults to true. -->
	<screenManagerEnabled>true</screenManagerEnabled>
	<!-- Determines whether screens fade in and out. Defaults to true. -->
	<useScreenFades>true</useScreenFades>
	
	<!-- ================================================================================
	SPLASH SCREEN SETTINGS
	================================================================================= -->
	<!-- The ID of the engine splash screen. -->
	<splashScreenID>splashScreen</splashScreenID>
	<!-- A series of color values that define the background gradient for the splash screen. -->
	<splashBackgroundColors ctype="Array">0x002C3F, 0x0181B8</splashBackgroundColors>
	<!-- The color of the engine logo on the splash screen. -->
	<splashLogoColor>0xFFBF00</splashLogoColor>
	<!-- Seconds that the splash screen should show before it auto-closes. -->
	<splashScreenWaitTime>6</splashScreenWaitTime>
	<!-- Determines whether to show the splash screen or not. -->
	<showSplashScreen>true</showSplashScreen>
	<!-- Determines whether the user is allowed to abort the splash screen or not
	(by pressing a key or clicking the mouse). -->
	<allowSplashAbort>true</allowSplashAbort>
	
</settings>
