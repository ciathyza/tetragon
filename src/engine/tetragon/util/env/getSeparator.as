package tetragon.util.env
{
	import flash.filesystem.File;
	
	
	/**
	 * Always returns the suitable file path separator for the platform that the Flash-
	 * or AIR content is running on. For web-base Flash content this is always "/".
	 * For AIR applications it is either "/" or "\", depending on the platform.
	 * 
	 * @return A string representing a file or URL separator.
	 */
	public function getSeparator():String
	{
		if (!isAIRApplication()) return "/";
		return File.separator;
	}
}
