ence.		 */		public static function get stage():Stage		{			return _stage;		}		public static function set stage(v:Stage):void		{			_stage = v;		}						/**		 * The width of the stage.		 */		public static function get stageWidth():int		{			return _stage.stageWidth;		}						/**		 * The height of the stage.		 */		public static function get stageHeight():int		{			return _stage.stageHeight;		}						/**		 * The horizontal center of the stage.		 */		public static function get hCenter():Number		{			return _stage.stageWidth * 0.5;		}						/**		 * The vertical center of the stage.		 */		public static function get vCenter():Number		{			return _stage.stageHeight * 0.5;		}	}}