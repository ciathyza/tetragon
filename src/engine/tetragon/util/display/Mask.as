		// Properties
		//-----------------------------------------------------------------------------------------				/** @private */		protected var _transparent:Boolean;						//-----------------------------------------------------------------------------------------		// Constructor		//-----------------------------------------------------------------------------------------				/**		 * Creates a new Mask instance.		 * 		 * @param width The width of the mask.		 * @param height The height of the mask.		 * @param mouseEnabled		 * @param transparent		 */		public function Mask(width:int = 0, height:int = 0, mouseEnabled:Boolean = false,			transparent:Boolean = false)		{			this.mouseEnabled = mouseEnabled;			mouseChildren = false;			focusRect = false;			_transparent = transparent;						if (width > 0 && height > 0) draw(width, height);		}						//-----------------------------------------------------------------------------------------		// Public Methods		//-----------------------------------------------------------------------------------------				/**		 * Draws the Mask.		 * 		 * @param width The width of the mask.		 * @param height The height of the mask.		 */		public function draw(width:int, height:int):void		{			graphics.clear();			graphics.lineStyle();			graphics.beginFill(0xFF00FF, _transparent ? 0.0 : 1.0);			graphics.drawRect(0, 0, width, height);			graphics.endFill();		}						/**		 * Returns a String Representation of Mask.		 * 		 * @return A String Representation of Mask.		 */		override public function toString():String		{			return "[Mask]";		}	}}