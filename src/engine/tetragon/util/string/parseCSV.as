package tetragon.util.string
{
	/**
	 * Parses a string made of comma-separated values into a String Vector.
	 * The values in the string must be separated by comma.
	 * 
	 * @param string The string to parse values from.
	 * @return A Vector with string values.
	 */
	public function parseCSV(string:String):Vector.<String>
	{
		if (string == null || string.length == 0) return null;
		string = string.split(" ").join("");
		return createStringVector(string.split(","));
	}
}
