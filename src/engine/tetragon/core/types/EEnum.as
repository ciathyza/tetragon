public class Gender extends EEnum	 *		{	 *			// Static Constructor:	 *			{init(Gender);}	 *				 *			public static const MALE:Gender = new Gender();	 *			public static const FEMALE:Gender = new Gender();	 *			public static const BOTH:Gender = new Gender();	 *			public static const NEUTER:Gender = new Gender();	 *		}	 *	}	 * </pre>	 */	public class EEnum	{		//-----------------------------------------------------------------------------------------		// Properties		//-----------------------------------------------------------------------------------------				/** @private */		private var _value:String = null;						//-----------------------------------------------------------------------------------------		// Public Methods		//-----------------------------------------------------------------------------------------				/**		 * Returns a String Representation of EEnum.		 * 		 * @return A String Representation of EEnum.		 */		public function toString():String		{			return "[" + getQualifiedClassName(this).match("[^:]*$")[0] + ", value=" + _value + "]";		}						//-----------------------------------------------------------------------------------------		// Getters & Setters		//-----------------------------------------------------------------------------------------				/**		 * Returns the value of the EEnum.		 */		public function get value():String		{			return _value;		}						//-----------------------------------------------------------------------------------------		// Private Methods		//-----------------------------------------------------------------------------------------				/**		 * @private		 */		protected static function init(type:*):void		{			var t:XML = describeType(type);			for each (var c:XML in t.constant)			{				var e:EEnum = type[c.@name];				/* if 'value' is already initialized, then we're probably calling				 * init() on the same type twice by accident, likely a copy-paste				 * bonehead mistake. */				if (e._value != null)				{					throw new Error("Can't initialize EEnum '" + type + "' twice!");				}				/* if the types don't match then probably have another copy-paste error. */				var obj:Object = e;				if (obj.constructor != type)				{					throw new Error("EEnum constant type [" + obj.constructor + "]"						+ " does not match its enum class [" + type + "]!");				}				e._value = c.@name;			}		}	}}